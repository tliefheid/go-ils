<!DOCTYPE html>
<html>
<head>
    <title>Library - Borrowed Books</title>
    <link rel="stylesheet" href="/static/pico.min.css">
</head>
<body>
    <main class="container">
        {{template "nav.gohtml" .}}
        <h1>Borrowed Books</h1>
        <table>
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Member</th>
                    <th>Issue Date</th>
                    <th>Due Date</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                {{range .}}
                <tr>
                    <td>{{.BookID}}</td>
                    <td>{{.Title}}</td>
                    <td>{{.Member}}</td>
                    <td>{{.IssueDate}}</td>
                    <td>{{.DueDate}}</td>
                    <td><a href="/borrowed-detail?book_id={{.BookID}}&member={{.Member}}">Details</a></td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </main>
</body>
</html>
