<!DOCTYPE html>
<html>
<head>
    <title>Library - Books</title>
    <link rel="stylesheet" href="/static/pico.min.css">
</head>
<body>
    <main class="container">
        <h1>Books</h1>
        <nav>
            <a href="/members">Members</a>
            <a href="/borrowed">Borrowed Books</a>
        </nav>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Genre</th>
                    <th>Year</th>
                    <th>Available</th>
                    <th>Total</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                {{range .}}
                <tr>
                    <td>{{.ID}}</td>
                    <td>{{.Title}}</td>
                    <td>{{.Author}}</td>
                    <td>{{.ISBN}}</td>
                    <td>{{.Genre}}</td>
                    <td>{{.PublicationYear}}</td>
                    <td>{{.CopiesAvailable}}</td>
                    <td>{{.CopiesTotal}}</td>
                    <td><a href="/book?id={{.ID}}">View</a></td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </main>
</body>
</html>
