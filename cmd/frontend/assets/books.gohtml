<!DOCTYPE html>
<html>
<head>
    <title>Library - Books</title>
    <link rel="stylesheet" href="/assets/pico.min.css">
</head>
<body>
    <main class="container">
        {{template "_nav.gothml" .}}
        <h1>Books</h1>
        <form method="GET" action="/books">
            <input type="text" name="q" placeholder="Search by title, author, or ISBN" value="{{.Query}}" style="width:300px;">
            <button type="submit">Search</button>
        </form>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Year</th>
                    <th>Available</th>
                    <th>Total</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                {{range .Books}}
                <tr>
                    <td>{{.ID}}</td>
                    <td>{{.Title}}</td>
                    <td>{{.Author}}</td>
                    <td>{{.ISBN}}</td>
                    <td>{{.PublicationYear}}</td>
                    <td>{{.CopiesAvailable}}</td>
                    <td>{{.CopiesTotal}}</td>
                    <td><a href="/books/{{.ID}}">View</a></td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </main>
</body>
</html>
