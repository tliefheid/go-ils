<!DOCTYPE html>
<html>
<head>
    <title>Library Reports</title>
    <link rel="stylesheet" href="/static/pico.min.css">
</head>
<body>
    <main class="container">
        <nav>
            <ul>
                <li><a href="/">Books</a></li>
                <li><a href="/members">Members</a></li>
                <li><a href="/borrowed">Borrowed Books</a></li>
                <li><a href="/isbn-lookup">ISBN Lookup</a></li>
                <li><a href="/reports">Reports</a></li>
            </ul>
        </nav>
        <h1>Library Reports</h1>
        <section>
            <h2>Currently Borrowed Books</h2>
            <table>
                <thead>
                    <tr>
                        <th>Book ID</th>
                        <th>Title</th>
                        <th>Member</th>
                        <th>Issue Date</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .Borrowed}}
                    <tr>
                        <td>{{.book_id}}</td>
                        <td>{{.title}}</td>
                        <td>{{.member}}</td>
                        <td>{{.issue_date}}</td>
                        <td>{{.due_date}}</td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </section>
        <section>
            <h2>Overdue Books</h2>
            <table>
                <thead>
                    <tr>
                        <th>Book ID</th>
                        <th>Title</th>
                        <th>Member</th>
                        <th>Issue Date</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .Overdue}}
                    <tr>
                        <td>{{.book_id}}</td>
                        <td>{{.title}}</td>
                        <td>{{.member}}</td>
                        <td>{{.issue_date}}</td>
                        <td>{{.due_date}}</td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </section>
        <section>
            <h2>Members</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Member ID</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .Members}}
                    <tr>
                        <td>{{.id}}</td>
                        <td>{{.name}}</td>
                        <td>{{.contact}}</td>
                        <td>{{.member_id}}</td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </section>
    </main>
</body>
</html>
